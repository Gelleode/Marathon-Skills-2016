<Page x:Class="Marathon_Skills_2016.Pages.MarathonRegConfirm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon_Skills_2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarathonRegConfirm">

    <Grid>
        <StackPanel>
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна!" FontSize="21" Foreground="#505050" Margin="10" TextWrapping="Wrap" TextAlignment="Center"/>
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2016!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Foreground="#505050" Margin="10" TextWrapping="Wrap" TextAlignment="Center"/>
            <TextBlock Text="С вами свяжутся по поводу оплаты." HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Foreground="#505050" Margin="10" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button x:Name="BtnOK" Content="OK" HorizontalAlignment="Center" Margin="20" FontSize="15" Click="BtnOK_Click" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
