<Page x:Class="Marathon_Skills_2016.Pages.RunnerCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon_Skills_2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerCheckPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="BtnRunnerExists" Content="Я участвовал ранее" Click="BtnRunnerExists_Click" Width="350" Height="40" FontSize="21" Margin="10"/>
            <Button x:Name="BtnRunnerNew" Content="Я новый участник" Click="BtnRunnerNew_Click" Width="350" Height="40" FontSize="21" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
