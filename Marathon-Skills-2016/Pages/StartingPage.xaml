<Page x:Class="Marathon_Skills_2016.Pages.StartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon_Skills_2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#505050" Panel.ZIndex="-1"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnRunner" Click="BtnRunner_Click" Content="Я хочу стать бегуном" FontSize="21" Height="60" Width="350" Margin="10" FontStyle="Italic"/>
            <Button x:Name="BtnRunnerSponsor" Click="BtnRunnerSponsor_Click" Content="Я хочу стать спонсором бегуна" FontSize="21" Height="60" Width="350" Margin="10" FontStyle="Italic"/>
            <Button x:Name="BtnVisitor" Click="BtnVisitor_Click" Content="Я хочу узнать больше о событии" FontSize="21" Height="60" Width="350" Margin="10" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</Page>
